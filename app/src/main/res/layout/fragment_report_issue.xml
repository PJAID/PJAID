<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#0E0D3A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zgłoś awarię"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editDeviceInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nazwa / numer urządzenia"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:textColorHint="#000000"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/editIssueDesc"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Opisz awarię"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:textColorHint="#000000"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Typ awarii:"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerIssueType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:padding="8dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wyślij zgłoszenie"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:layout_marginTop="16dp"
            android:elevation="4dp"/>
    </LinearLayout>
</ScrollView>