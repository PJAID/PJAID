<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Styl dla przycisków głównych ) -->
    <style name="MyButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#4D5A88D1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <!-- Styl dla przycisku niebezpiecznego-->
    <style name="MyButtonDanger" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#DC3737</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <!-- Styl dla pól tekstowych (opcjonalnie do edycji zgłoszenia) -->
    <style name="MyTextInput" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="boxBackgroundColor">#FFFFFF</item>
        <item name="boxStrokeColor">#4D5A88D1</item>
        <item name="hintTextColor">#999999</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
